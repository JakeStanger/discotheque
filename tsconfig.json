{
  "compilerOptions": {
    "module": "commonjs",
    "resolveJsonModule": true,
    "target": "ES2018",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "outDir": "./lib",
    "jsx": "react"
  },
  "exclude": [
   "**/node_modules",
   "**/*.spec.ts"
 ]
}
